<div class="modal fade mu-kids-results mu-kindergarten-context" id="kids-results" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content <%= icon_class_for @assignment %>">
      <div class="modal-body">
        <button type="button" class="mu-kindergarten-close-button" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">
              <i class="fa fa-fw fa-times fa-3x"></i>
            </span>
        </button>
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-12 submission-results">
              <% if current_user? %>
                <% if @assignment.solved? %>
                  <%= corollary_box @exercise %>
                <% else %>
                  <img src="//feranzures.files.wordpress.com/2010/09/dreamstime_6604144.jpg" alt="failure">
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
