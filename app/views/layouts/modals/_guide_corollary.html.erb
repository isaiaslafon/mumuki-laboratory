<div class="modal fade guide-corollary <%= 'mu-kids-modal-border' if Organization.current.kids? %>" id="guide-done" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <% if Organization.current.kids? %>
        <button type="button" class="mu-kids-modal-button mu-close" data-bs-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">
            <i class="fas fa-fw fa-times fa-3x"></i>
          </span>
        </button>
      <% end %>
      <div class="modal-header">
        <h3 class="modal-title"><%= t :guide_finished, guide: guide.name %></h3>
        <% if Organization.current.grown_ups? %>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        <% end %>
      </div>
      <div class="modal-body">
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-12">
              <%= corollary_box guide %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12 mu-last-box">
              <% if should_display_medal? @guide, Organization.current %>
                <hr>
                <p><%= t :unlocked_medal_as_avatar %></p>
                <%= corollary_medal_for guide %>
              <% end %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12 text-center">
              <%= next_lesson_button guide %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
