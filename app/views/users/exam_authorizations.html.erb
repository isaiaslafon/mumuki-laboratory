<%= content_for :breadcrumbs do %>
  <%= breadcrumbs_for_my_account %>
<% end %>

<%= render partial: 'layouts/user_menu' %>

<div class="col-md-9 mu-tab-body">
  <div class="mu-user-header">
    <h1><%= t(:exam_registrations) %></h1>
  </div>
  <% if @exam_authorization_requests.empty? %>
    <div class="mu-tab-body">
      <%= t :exams_will_be_here %>
    </div>
  <% else %>
    <div class="col-md-12">
      <div class="mu-list-group">
        <% @exam_authorization_requests.each do |it| %>
            <a class="mu-list-group-item" href="<%= exam_authorization_request_path it %>" target="_blank">
              <span class="fa fa-fw fa-<%= it.icon[:class] %> text-<%= it.icon[:type] %>" title="<%= t(it.status).humanize %>"></span>
              <span class="mu-divider-vertical"></span>
              <span><strong><%= it.exam_registration.description %></strong> - <small><%= l(it.exam_registration.start_time, format: :long) %></small></span>
            </a>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
